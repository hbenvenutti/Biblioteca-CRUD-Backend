{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@errors/*": ["shared/errors/*"],
      "@middlewares/*": ["shared/infra/http/middlewares/*"],

      "@accounts/*": ["modules/accounts/*"],
      "@accounts:containers/*": ["modules/accounts/containers/*"],
      "@accounts:entities/*": ["modules/accounts/entities/*"],
      "@accounts:errors/*": ["modules/accounts/errors/*"],
      "@accounts:mappers/*": ["modules/accounts/mappers/*"],
      "@accounts:dtos/*":["modules/accounts/dtos/*"],
      "@accounts:repositories/*": ["modules/accounts/infra/firestore/repositories/*"],
      "@accounts:repositories-interfaces/*": ["modules/accounts/repositories/*"],
      "@accounts:routes/*":["modules/accounts/infra/http/*"],
      "@accounts:use-cases/*": ["modules/accounts/use-cases/*"],

      "@books/*": ["modules/books/*"],
      "@books:containers/*": ["modules/books/containers/*"],
      "@books:entities/*": ["modules/books/entities/*"],
      "@books:errors/*": ["modules/books/errors/*"],
      "@books:mappers/*": ["modules/books/mappers/*"],
      "@books:dtos/*":["modules/books/dtos/*"],
      "@books:repositories/*": ["modules/books/infra/firestore/repositories/*"],
      "@books:repositories-interfaces/*": ["modules/books/repositories/*"],
      "@books:routes/*":["modules/books/infra/http/*"],
      "@books:use-cases/*": ["modules/books/use-cases/*"],

      "@shared/*": ["shared/*"],
      "@shared:app/*": ["shared/infra/http/*"],
      "@shared:containers/*": ["shared/containers/*"],
      "@shared:routes/*": ["shared/infra/http/routes/*"],
      "@firestore/*": ["shared/infra/firestore/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
